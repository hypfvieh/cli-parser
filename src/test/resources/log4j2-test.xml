<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" strict="true" name="test logging config">

    <Appenders>
        <Console name="app_stdout">
            <PatternLayout pattern="%d{DEFAULT} %-5level [%thread] %logger{3} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="app_stdout" />
        </Root>
    </Loggers>

</Configuration>
